<% @title=@article.title %>

<div class="card">
  <ul class="inline">
    <li><%= link_to 'Back', articles_path %></li>
    <li><%= link_to 'Edit', edit_article_path(@article) %></li>
    <li><%= link_to 'Destroy', article_path(@article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></li>
  </ul>
</div>

<div class="card">
  <%= @article.text %>
</div>

<%= render 'comments/form' %>

<%= render @article.comments %>
