<div class="card">
  <div class="card-content">
    <span class="card-title">Join Group</span><br>
    <%= form_for [@group, @group.people.build], remote: true do |f| %>
      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "Join Group", class: "btn-flat waves-effect waves-light" %>
    <% end %>
  </div>
</div>