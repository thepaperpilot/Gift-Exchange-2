<% if @user.errors.any? %>
  $("#error_explanation").html('<ul class="collection with-header"><li class="collection-header"><h4><%= j pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4></li><% @user.errors.full_messages.each do |msg| %><li class="collection-item"><%= j msg %></li><% end %></ul>');
<% else %>
  $("#error_explanation").html('');

  $(".head h1").html('\n<% if @user.public_avatar %><%= gravatar_for(@user) %><% else %><i class="material-icons">face</i><% end %>\n<%= @user.name %>');

  document.title = "<%= @user.name %>";
<% end %>
